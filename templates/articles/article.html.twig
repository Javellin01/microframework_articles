{% extends 'base.html.twig' %}

{% block title %} Articles List {% endblock %}
{% block body %}
    <div class="container">
        <div class="article-header">
            <h1>{{ article.title }}</h1>
        </div>
        <br>
        <div class="article-content">
            <p>{{ article.text }}</p>
            <br>
            {% if (edit) %}
                <a href="{{ edit }}" class="btn btn-dark">Edit Article</a>
                <a href="{{ remove }}" class="btn btn-dark">Delete Article</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
